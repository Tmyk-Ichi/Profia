<% if user_signed_in? %>
<% if user.id != current_user.id %>
	<% unless current_user.following?(user) %>
		<%= link_to 'Follow' ,follow_users_path(user),method: :post, :class => "btn btn-sm btn-outline-primary"%>
	<% else %>
		<%= link_to 'Following' ,unfollow_users_path(user), method: :post,class: "btn btn-sm btn-primary"%>
	<% end %>
<% end %>
<% end %>