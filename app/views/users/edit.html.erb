<h1>Profile</h1>

<%= form_for(@user) do |f| %>
	<%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.jpg" %>
    <%= f.attachment_field :profile_image %>
	<%= f.label :ユーザーネーム %>
	<%= f.text_field :name %>

	<%= f.label :自己紹介 %>
	<%= f.text_field :introduction %>
    <%= f.submit "更新する" %>

<% end %>